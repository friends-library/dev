{
  "name": "@friends-library/cover-web-app",
  "version": "1.0.0",
  "private": true,
  "description": "cover web app for friends library",
  "repository": "github:friends-library-dev/cover-web-app",
  "author": "Jared Henderson <jared@netrivet.com>",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run tasks",
    "prestart": "npm run friends",
    "graphql:codegen": "flp-gql-codegen",
    "test": "true",
    "test:watch": "fldev test:watch",
    "lint": "fldev lint --ignore-pattern src/friends.js",
    "lint:fix": "npm run lint -- --fix",
    "ts:check": "fldev ts:check",
    "format": "fldev format",
    "compile": "fldev ts:compile",
    "listen:pdf": "node ./listen/listen-pdf.js",
    "tasks": "concurrently npm:listen:pdf npm:serve \"sleep 3 && node ../../apps/cli/dist/app.js cover:watch\"",
    "serve": "parcel ./src/index.html --port 9999",
    "friends": "fldev tsnode --transpile-only --skip-project ./src/scripts/friend-data.ts",
    "build": "npm run friends && parcel build ./src/index.html"
  },
  "dependencies": {
    "@friends-library/cover-component": "^3.1.6",
    "@friends-library/db": "^3.1.0",
    "@friends-library/env": "^1.4.0",
    "@friends-library/types": "^7.0.0",
    "@material-ui/core": "^4.0.0-beta.0",
    "@material-ui/icons": "^4.0.0-beta.0",
    "brace": "^0.11.1",
    "browser-or-node": "^1.2.1",
    "classnames": "^2.2.6",
    "cross-fetch": "^3.1.5",
    "glob": "^7.1.4",
    "lodash": "^4.17.11",
    "react": "16.10.1",
    "react-ace": "^6.5.0",
    "react-contenteditable": "^3.2.6",
    "react-dom": "16.10.1",
    "react-keyboard-event-handler": "^1.4.1"
  },
  "devDependencies": {
    "@friends-library/dev": "~4.5.2",
    "@types/classnames": "^2.2.10",
    "@types/lodash": "^4.14.161",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.8.4",
    "concurrently": "^4.1.0",
    "parcel": "^1.12.4",
    "x-chalk": "^1.0.1",
    "x-exec": "^1.2.0"
  }
}
